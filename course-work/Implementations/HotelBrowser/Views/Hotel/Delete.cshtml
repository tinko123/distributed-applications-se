@model DeleteViewModel
@{
    ViewBag.Title = "Delete Hotel";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <div class="d-grid gap-2 mb-2">
                    <img class="card-img-top" src=@Model.ImageUrl>
                </div>
                <h3 class="card-title text-center">@Model.Name</h3>
                <h5 class="card-title text-center">@Model.Description</h5>
                <h5 class="card-title text-center">Location: @Model.Location</h5>
                <p class="text-danger mt-3">"Are you sure you want to delete this hotel poster?"</p>
            </div>
            <div class="card-footer">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="@Model.Id" />
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                    <a asp-action="AllHotels" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>